@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System
@using System.Collections.Generic
@using System.Reflection
@using CS431_Project.Models
@using Nancy.ViewEngines.Razor.HtmlHelpers

@{
    Layout = "Layout.cshtml";
    ViewBag.Title = "New purchase";
}

<form method="POST">
    <div>
        <label>Movie</label>
        @Html.DropDownList("MovieId", (IEnumerable<SelectListItem>)Model.Movies)
    </div>
    <div>
        <label>Showing</label>
        @Html.DropDownList("ShowingId", (IEnumerable<SelectListItem>)Model.Showings)
    </div>
    <div>
        <label>Customer</label>
        @Html.DropDownList("CustomerId", (IEnumerable<SelectListItem>)Model.Customers)
    </div>
    <div>
        <label>Promotion</label>
        @Html.DropDownList("PromotionId", (IEnumerable<SelectListItem>)Model.Promotions)
    </div>
    <div>
        <button onclick=" submit ">Submit</button>
    </div>
</form>